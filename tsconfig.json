{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": false,
    "target": "es2015",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "build",
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "router": [ "../router/dist/index.d.ts" ],
      "simple-custom-element": [ "../simple-custom-element/dist/index.d.ts" ]
    }
  }
}